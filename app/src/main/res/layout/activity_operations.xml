<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:id="@+id/linear_layout_note_on_off"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="horizontal"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/linear_layout_send">

        <Button
                android:id="@+id/btn_send_on"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"

                app:backgroundTint="@color/colorPrimaryDark"
                android:textColor="@android:color/white"
                android:text="Note On"
                android:onClick="onSendMessage"/>

        <Button
                android:id="@+id/btn_send_off"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"

                app:backgroundTint="@color/colorPrimaryDark"
                android:textColor="@android:color/white"
                android:text="Note Off"
                android:onClick="onSendMessage"/>

        <!--<EditText
                android:id="@+id/edit_text_input_msg"
                android:layout_width="0dp"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:inputType="text"
                android:textSize="18sp"
                android:maxLength="11"
                tools:text="AA BB CC DD">
        </EditText>

        <EditText
                android:id="@+id/edit_text_output_msg"
                android:layout_width="0dp"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:inputType="text"
                android:textSize="18sp"
                android:maxLength="11"
                tools:text="AA BB CC DD">
        </EditText>

        <Button
                android:layout_column="1"
                android:layout_gravity="right"
                android:layout_columnWeight="1"
                android:textSize="16sp"
                android:text="OK"
                android:onClick="updateMsgFromView"/>-->

    </LinearLayout>

    <LinearLayout
            android:id="@+id/linear_layout_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:orientation="horizontal"

            app:layout_constraintTop_toBottomOf="@+id/linear_layout_note_on_off"
            app:layout_constraintBottom_toTopOf="@+id/recycler_view_rules">

        <EditText
                android:id="@+id/edit_text_custom_msg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:inputType="text"
                android:textSize="18sp"
                tools:text="12 34 56">
        </EditText>

        <Button
                android:id="@+id/btn_send_msg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                app:backgroundTint="@color/colorPrimaryDark"
                android:textColor="@android:color/white"
                android:text="Send"
                android:onClick="onSendMessage"/>

    </LinearLayout>

    <!--Line separator-->
    <!--<View
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="16dp"

            app:layout_constraintTop_toBottomOf="@+id/linear_layout_send"
            app:layout_constraintBottom_toTopOf="@+id/recycler_view_rules"

            android:background="@android:color/black"
            android:alpha=".5"/>-->


    <android.support.v7.widget.RecyclerView
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/recycler_view_rules"
            android:layout_width="match_parent"
            android:layout_height="0dp"

            app:layout_constraintTop_toBottomOf="@+id/linear_layout_send"
            app:layout_constraintBottom_toBottomOf="parent"

            android:padding="8dp"
            tools:listitem="@layout/rules_list_item"/>

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"

            app:layout_constraintBottom_toTopOf="@+id/fab_start_midi_handler"
            app:layout_constraintEnd_toEndOf="parent"

            android:src="@drawable/ic_add_white_24dp"/>

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_start_midi_handler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            android:src="@drawable/ic_play_arrow_white_24dp"/>


    <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_stop_midi_handler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            android:visibility="invisible"
            android:src="@drawable/ic_stop_white_24dp"/>

</android.support.constraint.ConstraintLayout>